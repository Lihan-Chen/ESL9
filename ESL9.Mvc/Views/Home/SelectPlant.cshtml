@* @{
    ViewData["Title"] = "Select A Plant";
} *@

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">@ViewBag.Message</h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="SetPlant" asp-controller="Home">
                        <fieldset>
                            <legend>@ViewData["Title"]</legend>
                        @await Component.InvokeAsync("PlantSelector", new { selectedPlant = ViewBag.SelectedPlant })
                        </fieldset>
                        @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
                        {
                                <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                        }

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">Confirm Selection</button>
                            @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
                            {
                                    <a href="@ViewBag.ReturnUrl" class="btn btn-secondary ml-2">Cancel</a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            document.addEventListener('plantSelected', function (e) {
                // Optional: Add any additional client-side handling here
                console.log('Plant selected:', document.getElementById('selectedPlant').value);
            });
        </script>
}